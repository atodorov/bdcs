name:                db
version:             0.1.0.0
author:              Chris Lumens
maintainer:          clumens@redhat.com
build-type:          Simple
cabal-version:       >=1.10
license:             LGPL
license-file:        LICENSE

flag debug
  description:       Enable debugging spew
  default:           False

library
  exposed-modules:     BDCS.Builds,
                       BDCS.DB,
                       BDCS.Exceptions,
                       BDCS.Files,
                       BDCS.FileType,
                       BDCS.Groups,
                       BDCS.KeyValue,
                       BDCS.Packages,
                       BDCS.Projects,
                       BDCS.ReqType,
                       BDCS.Signatures,
                       BDCS.Sources,
                       BDCS.RPM.Builds,
                       BDCS.RPM.Files,
                       BDCS.RPM.Groups,
                       BDCS.RPM.Projects,
                       BDCS.RPM.Signatures,
                       BDCS.RPM.Sources,
                       Import.Comps,
                       Import.Conduit,
                       Import.RPM,
                       Import.Repodata

  build-depends:       base >=4.8 && <4.9,
                       bytestring,
                       cond,
                       conduit >= 1.2.8,
                       conduit-extra,
                       directory,
                       esqueleto == 2.5.0,
                       filepath,
                       http-conduit,
                       mtl >= 2.2.1,
                       persistent,
                       persistent-sqlite,
                       persistent-template,
                       resourcet,
                       rpm,
                       text,
                       time,
                       transformers,
                       xml-conduit
  default-language:    Haskell2010

executable import
  main-is:             import.hs

  build-depends:       attoparsec >= 0.12.1.4,
                       attoparsec-binary,
                       base >= 4.7 && < 4.9,
                       bytestring >= 0.10 && < 0.11,
                       cond,
                       conduit >= 1.2.8,
                       conduit-extra,
                       db,
                       directory,
                       esqueleto == 2.5.0,
                       filepath,
                       http-conduit,
                       mtl >= 2.2.1,
                       network-uri,
                       persistent,
                       persistent-sqlite,
                       persistent-template,
                       pretty >= 1.1.2.0,
                       resourcet,
                       rpm,
                       text,
                       time,
                       transformers,
                       unix,
                       xml-conduit

  default-language:    Haskell2010

  ghc-options:         -Wall

executable depclose
  main-is:             depclose.hs

  build-depends:       attoparsec >=0.12.1.4,
                       attoparsec-binary,
                       base >= 4.7 && < 4.9,
                       bytestring,
                       cond,
                       conduit >= 1.2.8,
                       conduit-extra,
                       containers,
                       db,
                       directory,
                       esqueleto == 2.5.0,
                       filepath,
                       persistent,
                       persistent-sqlite,
                       persistent-template,
                       resourcet,
                       rpm,
                       text,
                       time,
                       transformers

  default-language:    Haskell2010

  if flag(debug)
    cpp-options:       -Wall -DDEBUG
    cc-options:        "-DDEBUG"
  else
    cpp-options:       -Wall

Test-Suite test-db
  type:                exitcode-stdio-1.0
  hs-source-dirs:      tests
  main-is:             Main.hs
  build-depends:       HUnit,
                       base >= 4.8 && < 4.9,
                       persistent,
                       persistent-sqlite,
                       tasty,
                       tasty-hunit,
                       db,
                       rpm
  default-language:    Haskell2010
